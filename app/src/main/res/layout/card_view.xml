<?xml version="1.0" encoding="utf-8"?><!--  相对布局?  -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlackBackground">

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhiteText"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/card_author"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/card_title"
                android:textColor="@color/colorWhiteText" />

            <TextView
                android:id="@+id/card_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_author"
                android:textColor="@color/colorWhiteText" />

            <TextView
                android:id="@+id/card_agree_count"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_below="@id/card_summary"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhiteText" />

            <TextView
                android:id="@+id/card_comment_count"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_below="@id/card_summary"
                android:layout_toEndOf="@+id/card_agree_count"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhiteText" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>